<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">
	<Script file="castBar.lua"/>
	<StatusBar name="RazerNagaCastingBarTemplate" inherits="CastingBarFrameTemplate" drawLayer="BORDER" hidden="true" virtual="true">
		<Size x="210" y="14"/>
		<KeyValues>
			<KeyValue key="playCastFX" value="true" type="boolean"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color r="0" g="0" b="0" a="0.5"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="SmallBorder" file="Interface\CastingBar\UI-CastingBar-Border-Small">
					<Size x="275" y="68"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Text" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString parentKey="Time" font="GameFontHighlight" hidden="true">
					<Anchors>
						<Anchor point="RIGHT">
							<Offset x="-4" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:OnLoad("player", true, false)
			</OnLoad>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</StatusBar>
</Ui>