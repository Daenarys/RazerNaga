<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">
	<Script file="CastingBarFrame.lua"/>
	<Script file="castBar.lua"/>
	<StatusBar name="RazerNagaCastingBarTemplate" drawLayer="BORDER" hidden="true" virtual="true">
		<Size x="208" y="11"/>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="0">
				<Texture parentKey="TextBorder" atlas="ui-castingbar-textbox">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="-12"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Background" atlas="ui-castingbar-background">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Border" atlas="ui-castingbar-frame">
					<Anchors>
						<Anchor point="TOPLEFT" x="-2" y="2"/>
						<Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Spark" atlas="ui-castingbar-pip">
					<Size x="6" y="16"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Flash" atlas="ui-castingbar-full-glow-standard" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" x="-1" y="1"/>
						<Anchor point="BOTTOMRIGHT" x="1" y="-1"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Text" inherits="SystemFont_Shadow_Small">
					<Size x="0" y="16"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-8"/>
						<Anchor point="TOPRIGHT" x="0" y="-8"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				CastingBarFrame_OnLoad(self, 'player', true)
			</OnLoad>
			<OnEvent function="CastingBarFrame_OnEvent"/>
			<OnUpdate function="CastingBarFrame_OnUpdate"/>
		</Scripts>
	</StatusBar>
</Ui>